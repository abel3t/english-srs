# Noji Authentication
NOJI_EMAIL=your-email@example.com
NOJI_PASSWORD=your-password
# Single deck or multiple decks (comma-separated)
NOJI_DECK_ID=deck-id-1,deck-id-2,deck-id-3

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Server Configuration
PORT=3000

# Environment (optional, default: development)
NODE_ENV=development

# Gemini API
GEMINI_API_KEY=your-gemini-api-key

# Logging (optional, default: info)
LOG_LEVEL=info
